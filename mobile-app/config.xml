<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.savemygas.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Save my gas</name>
    <description>
        O aplicativo que te auxilia nos custos com combust√≠vel
    </description>
    <author email="jhonasn@gmail.com" href="http://github.com/jhonasn">
        Jhonas Nascimento
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.2.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~2.1.0" />
    <plugin name="cordova-plugin-device" spec="~1.1.3" />
</widget>
